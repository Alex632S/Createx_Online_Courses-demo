doctype html
html(lang="en")
   head.page__head
      meta(charset="UTF-8")
      meta(http-equiv="X-UA-Compatible" content="IE=edge")
      meta(name="viewport" content="width=device-width, initial-scale=1.0")
      link(rel="stylesheet" href="./css/style.min.css")
      title Createx Online Courses
   body.page__body 
      header.header 
         .container 
            //- navigatioin Header
            include modules/navigation-line.pug
         .container.container-flex 
            .container-column
               //- container-column(cc)
               ul.cc-wrap.cc-wrap-flex
                  li
                     button.header-btn 
                        img.header-btn__img(src="./img/Button/play.svg" alt="button play")
                  li
                     span.header-btn__description Play showreel   
               .cc-wrap
                  h1.header-title Enjoy studying with Createx Online Courses
               ul.cc-wrap.cc-wrap-flex
                  li 
                     //- BUTTON opacity
                     button.button-global-opacity 
                        span.button-global-opacity__title About us
                  li 
                     //- BUTTON Red
                     button.button-global 
                        span.button-global__title Explore courses
                        
            .container-image
               img(src="./img/Header/illustration.svg" alt="banner") 

